root = True

[**]
charset = UTF-8

end_of_line = LF
insert_final_newline = True

trim_trailing_whitespace = True

[.editorconfig]
max_line_length = 79

indent_style = Space
tab_width = 4

[*.md]
max_line_length = 79

indent_style = Space
tab_width = 4

[src/*]
# There can be longer lines, read the section "Maximum Line Length" from PEP-8
# (https://peps.python.org/pep-0008/#maximum-line-length) for more information.
max_line_length = 79

indent_style = Space
tab_width = 4

[{Makefile,config.mk}]
max_line_length = 79

indent_style = Tab
tab_width = 4
